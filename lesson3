#input here the word to test
input("give me a string")
i = input()
new_i = i[0:2]+i[-2:]
if len(i) <2:
   print("Empty String") 

elif len(i)>2:
	print(new_i) 

else:
	print(i*2)


#task2
input("put your phone number here: ")

phone_num = input()

if phone_num.isdigit() is False:
	print("try to put only numbers!")
elif len(phone_num)!=10:
	print("error! Too less or too many numbers")


else :
	print("Thank you for giving your number hahahha")

